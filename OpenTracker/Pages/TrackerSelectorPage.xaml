<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OpenTracker.Pages.TrackerSelectorPage"
             BackgroundColor="#1E1E1E"
             Title="Select Tracker">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Grid ColumnDefinitions="*, Auto">
            <Label Text="Available Trackers" TextColor="White" FontSize="24" FontAttributes="Bold"
                   VerticalOptions="Center" />
            <Button Grid.Column="1" Text="+" Clicked="OnAddTrackerClicked" WidthRequest="40" HeightRequest="40"
                    Padding="0" />
        </Grid>
        <CollectionView x:Name="TrackerList" SelectionMode="Single" SelectionChanged="OnSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Margin="0,5"
                            BackgroundColor="#2D2D2D"
                            Stroke="Transparent"
                            Padding="10"
                            StrokeShape="RoundRectangle 6">
                        <Grid ColumnDefinitions="50, *, Auto, Auto" ColumnSpacing="5">

                            <Label Grid.Column="0" Text="{Binding Icon}" FontSize="24" VerticalOptions="Center"
                                   HorizontalOptions="Center" />

                            <Label Grid.Column="1" Text="{Binding Name}" TextColor="White" FontSize="18"
                                   VerticalOptions="Center" />

                            <Button Grid.Column="2" Text="âœï¸"
                                    Clicked="OnEditClicked"
                                    CommandParameter="{Binding .}"
                                    BackgroundColor="Transparent"
                                    TextColor="White"
                                    WidthRequest="40" HeightRequest="40" Padding="0" />

                            <Button Grid.Column="3" Text="ðŸ—‘ï¸"
                                    Clicked="OnDeleteClicked"
                                    CommandParameter="{Binding .}"
                                    BackgroundColor="Transparent"
                                    TextColor="#FF5252"
                                    WidthRequest="40" HeightRequest="40" Padding="0" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Cancel" Clicked="OnCancelClicked" BackgroundColor="#555" Margin="0,20,0,0" />
    </VerticalStackLayout>
</ContentPage>